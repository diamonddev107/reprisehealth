@font-face {
    font-family: "newyork";
    src: url("{{ 'NewYork.otf' | asset_url }}");
}
.site-header {
    background: transparent;
    position: fixed;
    width: 100%;
    top: 0;
    left: 0;
    .header-middle, .header-mobile {
        background: transparent;
    }
}
#shopify-section-footer {
    display: none;
}
.homepage-section {
    .container-fluid {
        height: 100vh;
        background-size: cover;
        background-position: center center;
        background-repeat: no-repeat;
        // opacity: 0.9;
        position: relative;
        .wrapper {
            position: absolute;
            bottom: 60px;
            left: 60px;
            max-width: 600px;
            .row-block {
                margin-top: 40px;
                h2, h3 {
                    font-family: 'NewYork';
                    color: white;
                    line-height: 1;
                }
                p, a {
                    font-family: 'DM Sans', sans-serif;
                    color: white;
                    line-height: 1;
                }
                .h1 {
                    font-weight: normal;
                    font-size: 54px;
                    line-height: 64px;
                }
                p {
                    font-size: 12px;
                    text-align: center;
                }
                .desktop-hide {
                    display: none;
                }
                .h3 {
                    font-weight: normal;
                    font-size: 24px;
                    letter-spacing: 1px;
                }
                .buttons {
                    padding: 14px 0px;
                    margin-bottom: 40px;
                    .btn-quiz {
                        background: #272C2F;
                        box-shadow: 0px 4px 64px rgba(0, 0, 0, 0.25);
                        border-radius: 10px;
                        font-size: 14px;
                        padding: 14px 60px;
                        margin-right: 30px;
                    }
                    .btn-products {
                        font-size: 13px;
                        text-decoration-line: underline;
                        display: none;
                    }
                }
                .arrow {
                    display: none;
                    .btn-arrow-quiz {
                        display: block;
                        width: 25px;
                        height: 25px;
                        border-left: 5px solid #fff;
                        border-bottom: 5px solid #fff;
                        border-radius: 6%;
                        transform: rotate(-45deg);
                        text-align: center;
                        margin-top: 40px;
                        margin-left: 5px;
                    }
                }
            }
        }
    }

}
@media (max-width: 768px) {
    .homepage-section {
        .container-fluid {
           display: flex;
            .wrapper {
                position: relative;
                bottom: unset;
                left: unset;
                text-align: center;
                display: flex;
                flex-direction: column;
                justify-content: space-evenly;
                max-width: 100%;
                padding: 0 40px;
                .row-block {
                    margin-top: 0;
                    .h1 {
                        font-size: 24px;
                        line-height: 1;
                        margin-bottom: 30px;
                    }
                    p {
                        line-height: 1.4;
                    }
                    .mobile-hide {
                        display: none;
                    }
                    .desktop-hide {
                        display: block;
                    }
                    .buttons {
                        display: flex;
                        flex-direction: column;
                        max-width: 241px;
                        justify-content: center;
                        margin: 0 auto;
                        .btn-quiz {
                            margin-right: 0px;
                            background: #E5E5E5;
                            color: #272C2F;
                            margin-bottom: 40px;
                        }
                    }
                    .arrow {
                        display: none;
                    }
                }
            }
        }
    
    }
}
