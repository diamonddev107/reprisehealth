.site-header {
    background: transparent;
    position: fixed;
    width: 100%;
    top: 30px;
    left: 0;
    .header-middle, .header-mobile {
        background: transparent;
    }
}
#shopify-section-footer {
    display: none;
}
.homepage-section {
    .container-fluid {
        height: 100vh;
        background-size: cover;
        background-position: center center;
        background-repeat: no-repeat;
        // opacity: 0.9;
        position: relative;
        .wrapper {
            position: absolute;
            bottom: 60px;
            left: 60px;
            max-width: 311px;
            .row-block {
                margin-top: 40px;
                h2, h3 {
                    font-family: 'NewYork';
                    color: white;
                    line-height: 29px;
                }
                p, a {
                    font-family: 'DM Sans', sans-serif;
                    color: white;
                    line-height: 1;
                }
                .h1 {
                    font-weight: normal;
                    font-size: 24px;
                    line-height: 29px;
                }
                p {
                    text-align: center;
                    font-family: 'Arimo';
                    font-size: 14px;
                    line-height: 16px;
                }
                .desktop-hide {
                    display: none;
                }
                .h3 {
                    font-weight: normal;
                    font-size: 24px;
                }
                .buttons {
                    padding: 14px 0px;
                    margin-bottom: 40px;
                    .btn-quiz {
                        font-family: "Inter";
                        font-size: 16px;
                        font-weight: bold;
                        background: #E5E5E5;
                        color: #000000;
                        box-shadow: 0px 4px 64px rgba(0, 0, 0, 0.25);
                        border-radius: 10px;
                        padding: 14px 50px;
                        margin-right: 30px;
                    }
                    .btn-products {
                        font-size: 13px;
                        text-decoration-line: underline;
                        display: none;
                    }
                }
                .arrow {
                    display: none;
                    .btn-arrow-quiz {
                        display: block;
                        width: 25px;
                        height: 25px;
                        border-left: 5px solid #fff;
                        border-bottom: 5px solid #fff;
                        border-radius: 6%;
                        transform: rotate(-45deg);
                        text-align: center;
                        margin-top: 40px;
                        margin-left: 5px;
                    }
                }
            }
        }
    }

}
@media (max-width: 768px) {
    .homepage-section {
        .container-fluid {
           display: flex;
            .wrapper {
                position: relative;
                bottom: unset;
                left: unset;
                text-align: center;
                display: flex;
                flex-direction: column;
                justify-content: space-between;
                max-width: 100%;
                padding: 130px 40px 0px;
                .row-block {
                    margin-top: 0;
                    .h1 {
                        font-size: 24px;
                        margin-bottom: 30px;
                    }
                    .mobile-hide {
                        display: none;
                    }
                    .desktop-hide {
                        display: block;
                    }
                    .h3 {
                        padding: 0px 30px;
                    }
                    .buttons {
                        display: flex;
                        flex-direction: column;
                        max-width: 219px;
                        justify-content: center;
                        margin: 0 auto;
                        .btn-quiz {
                            margin-right: 0px;
                            // background: #E5E5E5;
                            // color: #272C2F;
                            margin-bottom: 65px;
                        }
                    }
                    .arrow {
                        display: none;
                    }
                }
            }
        }
    
    }
}
