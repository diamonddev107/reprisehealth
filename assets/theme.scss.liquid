        margin-right: 8px;
        margin-top: -2px;
    }
    .add {
        display: block;
        vertical-align: top;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
    .remove {
        display: none;
        vertical-align: top;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
    &.wishlist-added {
        .add {
            display: none;
        }
        .remove {
            display: block;
        }
    }
}


