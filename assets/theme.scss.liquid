.product-card_compare {
    display: none;
    input {
        display: none;
        &:not(:checked) + label:after {
            opacity: 0;
            transform: scale(0) rotate(-45deg)
        }
        &:checked + label:after {
            opacity: 1;
            transform: scale(1) rotate(-45deg);
        }
    }
    label {
        font-weight: 400;
        padding-left: 20px;
        position: relative;
        color: $color-body-text;
        text-transform: capitalize;
        &:before {
            content: "";
            left: 0;
            top: 0px;
            width: 13px;
            height: 13px;
            position: absolute;
            border: 1px solid #dbdbdb;
            background-color: #ffffff;
        }
        &:after {
            content: '';
            width: 9px;
            height: 5px;
            position: absolute;
            top: 3px;
            left: 1.5px;
            border: 2px solid #000000;
            border-top: none;
            border-right: none;
            background: rgba(255,255,255,0);
            transform: rotate(-45deg);
            transition: all 0.1s;
        }
        > span {
            position: relative;
            &:before {
                content: "";
                bottom: -1px;
                left: 0;
                width: 0;
                height: 1px;
                position: absolute;
                background-color: $color-body-text;
                transition: all 0.3s ease;
            }
        }
        &:hover {
            > span:before {
                width: 100%;
            }
        }
    }
    &.compare-added {
        input + label:after {
            opacity: 1;
            transform: scale(1) rotate(-45deg);
        }
    }
    @media (min-width: 1025px) {
        opacity: 0;
        right: 0;
        top: 50%;
        display: block;
        visibility: hidden;
        position: absolute;
        pointer-events: none;
        transform: translateY(-50%);
        transition: all 0.3s ease;
        &:before {
            content: "";
            bottom: -4px;
            right: 0;
            left: auto;
            opacity: 0;
            height: 1px;
            position: absolute;
            display: inline-block;
            width: calc(100% - 21px);
            background-color: $color-body-text;
            transition: all 0.3s ease;
        }
        &:hover {
            &:before {
                opacity: 1;
            }
        }
    }
}

