

{% if item["minimum_value"] != blank %}
  {% assign rangeMin =  item["minimum_value"] %}  
{% else %}
  {% assign rangeMin =  1 %}    
{% endif %}

{% if item["maximum_value"] != blank %}
  {% assign rangeMax =  item["maximum_value"] %}
{% else %}
  {% assign rangeMax =  item['answer_choices'].size %}
{% endif %}

<div class="slide-inner" data-range-min="{{ item['minimum_value'] }}">
  <div class="slide-top">
    <div class="slide-header">
      <div class="question-heading slide-question slide-question-small text-center">{{ item["question_format_text"] }}</div>
      {% if item['format_subtext'] != blank %}
        <div class="question-subheading slide-question slide-question-small text-center">{{ item["format_subtext"] }}</div>
      {% endif %}
    </div> 
  </div>
  <div class="slide-bottom">
    {% render 'include-number-range', min: rangeMin, max: rangeMax, item: item['answer_choices'] %}
    <div class="slide-continue-wrapper">
      <p class="nothing-selected text-center">{{ item['nothing_selected_text'] }}</p>
      <a class="btn--kleva btn--quiz-continue ">Continue</a>
    </div>
  </div>
</div>