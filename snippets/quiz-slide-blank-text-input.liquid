{% assign rangeMin =  item["minimum_value"] %}
{% assign rangeMax =  item["maximum_value"] %}
<div class="slide-inner {% if item['unique_slide_id'] == "UserName" %}full-screen{% endif %}">
  <div class="slide-top">
    <div class="slide-header">
      <div class="question-heading slide-question slide-question-small text-center">{{ item["question_format_text"] }}</div>
      {% if item['unique_slide_id'] == "UserName" %}
        <div class="question-heading-image text-center">
          <img src="{{ 'Vector.png' | asset_url }}" alt="">
        </div>
      {% endif %}
    </div> 
  </div>
  <div class="slide-bottom">
    <div class="slide-answer-wrapper">
      {% if item["question_format_text"] contains "height" or item["question_format_text"] contains "weight" %}
        {% render 'quiz-height-weight-field', q_text: item["question_format_text"], min: rangeMin, max: rangeMax, placeholder: item['placeholder'], validation: item["data_validation"] %}
      {% else %}
        {% render 'quiz-text-field', slide_id: item['unique_slide_id'], min: rangeMin, max: rangeMax, placeholder: item['placeholder'], validation: item["data_validation"] %}  
      {% endif %}
    </div>
    <div class="slide-continue-wrapper">
      <p class="nothing-selected text-center">{{ item['nothing_selected_text'] }}</p>
    </div>
    <div class="slide-arrow-wrapper">
      <span></span>
    </div>
  </div>
</div>