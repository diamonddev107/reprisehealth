<div class="sidebarBlock custom">
    {% if block.settings.title != blank %}
    <h3 class="sidebarBlock__heading">{{ block.settings.title }}</h3>
    {% endif %}
    <div class="sidebarBlock__content">
        {% if block.settings.link != blank %}
            <a class="widget-img" href="{{ block.settings.link }}" aria-label="link">
        {% else %}
            <div class="widget-img">
        {% endif %}
            {% if block.settings.image != blank %}
                {{ block.settings.image | img_url: '255x' | img_tag: block.settings.image.alt, 'image-text-overlay' }}
            {% else %}
                <span class="recommended_size">255x225</span>
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
        {% if block.settings.link != blank %}
            </a>
        {% else %}
            </div>
        {% endif %}
    </div>
</div>